# =============================================================================
# Helm Sports Labs - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

# Production/Remote Supabase (Recommended for deployment)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Local Development (Optional - comment out production URLs above)
# NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -----------------------------------------------------------------------------
# Application Configuration (REQUIRED)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Helm Sports Labs

# Development Mode (Disable in production!)
NEXT_PUBLIC_DEV_MODE=false

# -----------------------------------------------------------------------------
# Sentry Error Monitoring (REQUIRED for Production)
# -----------------------------------------------------------------------------
# Get these from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token-here

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_CAMPS=true
# NEXT_PUBLIC_ENABLE_MESSAGING=true

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for future email features)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM_EMAIL=noreply@helmlab.com
# SMTP_FROM_NAME=Helm Sports Labs

# -----------------------------------------------------------------------------
# Uploadthing Configuration (Optional - for file uploads)
# -----------------------------------------------------------------------------
# UPLOADTHING_SECRET=sk_live_your-secret-key
# UPLOADTHING_APP_ID=your-app-id

# -----------------------------------------------------------------------------
# Stripe Configuration (Optional - for payments/subscriptions)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
# STRIPE_SECRET_KEY=sk_live_your-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -----------------------------------------------------------------------------
# API Keys (Optional - for integrations)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=sk-your-openai-api-key
# CLAUDE_API_KEY=your-claude-api-key

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# ANALYZE=false  # Set to 'true' to analyze bundle size
# NODE_ENV=production  # Automatically set by Vercel/deployment platform
